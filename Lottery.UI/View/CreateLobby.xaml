<Window x:Class="Lottery.UI.View.CreateLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lottery.UI.View"
        mc:Ignorable="d"
        Title="Crear sala" Height="650" Width="500"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="#DDDDDD" 
                BorderThickness="1" 
                Background="White" 
                CornerRadius="12" 
                Padding="40" 
                MaxWidth="420"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Crear sala" 
                           Style="{StaticResource TitleTextStyle}" 
                           Margin="0,0,0,30"/>

                <Label Content="_Modo de juego" Style="{StaticResource LabelStyle}" Target="{Binding ElementName=GameModeComboBox}"/>
                <ComboBox x:Name="GameModeComboBox">
                    <ComboBoxItem Content="Esquinas"/>
                    <ComboBoxItem Content="Centro"/>
                    <ComboBoxItem Content="Lleno"/>
                </ComboBox>

                <Label Content="_Sonido" Style="{StaticResource LabelStyle}" Target="{Binding ElementName=SoundComboBox}"/>
                <ComboBox x:Name="SoundComboBox">
                    <ComboBoxItem Content="Si"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <Label Content="_Imagen de cartas" Style="{StaticResource LabelStyle}" Target="{Binding ElementName=CardImageComboBox}"/>
                <ComboBox x:Name="CardImageComboBox">
                    <ComboBoxItem Content="Si"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <Label Content="_Tiempo de aparición de las cartas" Style="{StaticResource LabelStyle}" Target="{Binding ElementName=CardTimeComboBox}"/>
                <ComboBox x:Name="CardTimeComboBox">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="5"/>
                </ComboBox>

                <Label Content="_Fichas" Style="{StaticResource LabelStyle}" Target="{Binding ElementName=ChipTypeComboBox}"/>
                <ComboBox x:Name="ChipTypeComboBox">
                    <ComboBoxItem Content="Frijoles"/>
                    <ComboBoxItem Content="Piedras"/>
                    <ComboBoxItem Content="Maíz"/>
                </ComboBox>

                <Button x:Name="CreateLobbyButton" Click="CreateLobbyButton_Click" Content="Crear sala" Margin="0,40,0,0" Padding="12" FontSize="16" FontWeight="Bold" Foreground="White" Background="Black" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>